<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tes"
    tools:context=".RincianPembayaran">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="JURUSAN"
            android:fontFamily="@font/font_rockford_sans"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/font_rockford_sans"
            android:textAlignment="center"
            android:textStyle="normal"
            android:text="Pilihan Jenis Pembayaran SPP Beserta Tahun Angkatan"
            android:textSize="15sp" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:entries="@array/angkatan" />

        <EditText
            android:id="@+id/jumlah_sks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:digits="0123456789"
            android:ems="10"
            android:fontFamily="@font/font_rockford_sans"
            android:hint="Masukkan Jumlah SKS"
            android:inputType="number"
            android:maxLength="2"
            android:maxLines="1"
            android:text=""
            android:textSize="13sp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/button6"
            android:layout_width="273dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/button"
            android:fontFamily="@font/font_rockford_sans"
            android:textSize="15sp"
            android:text="Proses"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/button7"
            android:layout_width="273dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/button"
            android:fontFamily="@font/font_rockford_sans"
            android:textSize="15sp"
            android:text="Kembali" />

    </LinearLayout>
</RelativeLayout>